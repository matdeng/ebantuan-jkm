generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String    @id @default(cuid())
  name                String?
  email               String?   @unique
  email_verified_at   DateTime?

  //EMAIL VERIFICATION (NEW)

  emailToken          String?   @unique
  emailTokenExpiry    DateTime?

  image               String?
  password            String?
  role                Role      @default(PEMOHON)
  created_at          DateTime  @default(now())
  updated_at          DateTime  @default(now()) @updatedAt
  deleted_at          DateTime?

  // ADD THESE OPPOSITE RELATION FIELDS:
  accounts Account[]
  sessions Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

enum Role {
  PENTADBIR_SYSTEM
  PEMOHON
  PEMBANTU_TADBIR
  PEGAWAI_KEBAJIKAN_MASYARAKAT_DAERAH
  PEGAWAI_PENYIASAT
}

model zz_statuses {
  id        String   @id @default(cuid())
  name      String
  parent_id String?  // Self-referencing FK to id
  color     String?  // optional: 'pending', 'approved', etc
  old_id    Int?  // Existing ID from old system
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  // Self-referencing relation
  parent    zz_statuses? @relation("zz_statuses_parent", fields: [parent_id], references: [id], onDelete: SetNull)
  children  zz_statuses[] @relation("zz_statuses_parent")
  
  @@map("zz_statuses")
}
